<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.farm2.Controllers.FarmerLoginController">
    <!-- This VBox is like a container holding your elements, aligned in the center, and spaced 10 units apart -->
    <Label text="Farmer Login" />

    <Label text="Username:" /> <!-- A simple label -->

    <TextField fx:id="usernameField" promptText="Enter your username" /> <!-- A text field, fx:id is used to reference it in the controller -->

    <Label text="Password:" />

    <PasswordField fx:id="passwordField" promptText="Enter your password" /> <!-- Another text field, this time for passwords -->

    <Button text="Login" onAction="#handleLoginButton" /> <!-- A button, onAction is used to link it to a method in the controller -->

</VBox>